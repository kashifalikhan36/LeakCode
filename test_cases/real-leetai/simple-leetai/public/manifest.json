{
    "manifest_version": 3,
    "name": "My React Vite Extension",
    "version": "1.0",
    "description": "A Chrome extension built using React and Vite.",
    "action": {
      "default_popup": "index.html"
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }
  